@using BIMI.Web.Enums
@model BIMI.Web.Models.ChooseserviceModel

<form method="post" action="@Url.Action("Service", "Home")">
    <br>
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
            <div class="input-group-lg">
                @Html.DropDownList("ServiceType", new SelectList(Enum.GetValues(typeof(ServiceType))), "Select Service", new { @class = "form-control" })
                <h1></h1>
            </div>

            @Html.TextAreaFor(m => m.Description, new { @class = "form-control" , @placeholder = "Description" })
            <h1></h1>

            <h3></h3>
            @Html.TextBoxFor(m => m.MoneyRange, new { @class = "form-control" ,@placeholder = "Service price" })
            <h1></h1>
            <input type="submit" class="btn btn-primary" value="Save">
        </div>
        <div class="col-lg-3"></div>

    </div>

</form>